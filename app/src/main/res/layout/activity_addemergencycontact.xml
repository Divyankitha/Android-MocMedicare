<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:padding="8dip">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:text="@string/app_label"
            android:textColor="@color/white"
            android:textSize="30dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5sp">
        <TextView
            android:id="@+id/firstname"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:text="@string/firstname_label"
            android:textColor="@color/white"
            android:textSize="20dp"/>1
        <EditText
            android:id="@+id/firstnameET"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_weight="60"
            android:background="@color/white"
            android:layout_toRightOf="@id/firstname"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:paddingBottom="5sp">
        <TextView
            android:id="@+id/lastname"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:text="@string/lastname_label"
            android:textColor="@color/white"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/lastnameET"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:layout_toRightOf="@id/lastname"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:paddingBottom="5sp">
        <TextView
            android:id="@+id/emailId"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:text="@string/EmailID_label"
            android:textColor="@color/white"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/emailIdET"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:layout_toRightOf="@id/emailId"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:paddingBottom="5sp">
        <TextView
            android:id="@+id/contact"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:text="@string/Contact_label"
            android:textColor="@color/white"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/contactET"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:layout_toRightOf="@id/contact"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:paddingBottom="5sp">
        <TextView
            android:id="@+id/address"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:text="@string/Address_label"
            android:textColor="@color/white"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/addressET"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:layout_toRightOf="@id/address"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10sp"
        android:paddingBottom="5sp">
        <TextView
            android:id="@+id/relation"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textAlignment="textEnd"
            android:text="@string/relation_label"
            android:textColor="@color/white"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/relationET"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:layout_toRightOf="@id/relation"
            android:textSize="15dp"
            android:textColor="@color/colorPrimary"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="5dp">
        <Button
            android:id="@+id/addECBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:textColor="@color/colorPrimary"
            android:text="@string/btn_add_label"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:onClick="addEmergencyContact"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <Button
            android:id="@+id/backECBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:textColor="@color/colorPrimary"
            android:text="BACK"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:onClick="backFromAddEC"/>
    </RelativeLayout>
</LinearLayout>

